@page "/fetchdata"
@using BlazorApp1.Service
@using BlazorApp1.Data

@inherits SimplePage<Customer>
@inject CustomerService service;
<div onclick="new TestJs().qwer"></div>
<Grid @ref="this.Grid" Service="this.service" TEntity="Customer">
    <Columns>
        <GridColumn Data="context" Field="u => u.Area.City.Province.Title" />
        <GridColumn Data="context" Field="u => u.Area.City.Title" />
        <GridColumn Data="context" Field="u => u.Area.Title" />
        <GridColumn Data="context" Field="@(u => u.FName + " " + u.LName + " " + u.ParentName + '(' +  u.Gender + ')')" />
        <GridCommandColumns />
    </Columns>
</Grid>

<div></div>
<span>@Index</span>
<button @onclick="Testvalue">Change</button>
@code {
    private int Index { get; set; }



    private void Testvalue()
    {
        Index++;
    }

}
