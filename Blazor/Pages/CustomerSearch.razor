@inherits SearchComponent<Customer>
@using BlazorApp1.Service
@inject CustomerService service;
<Grid @ref="this.Grid" Service="service" OnDataBinding="DataBinding" TEntity="Customer">
    <Columns>
        <GridColumn Data="context" Field="u => u.Area.City.Province.Title" />
        <GridColumn Data="context" Field="u => u.Area.City.Title" />
        <GridColumn Data="context" Field="u => u.Area.Title" />
        <GridColumn Data="context" Field="@(u => u.FName + " " + u.LName + " " + u.ParentName + '(' +  u.Gender + ')')" />
    </Columns>
</Grid>
@code {
    protected override void OnInitialized()
    {
        InitialTextExpression(t => t.FName + " " + t.LName);
    }

    private IQueryable<Customer> DataBinding(IQueryable<Customer> query)
    {
        if (SearchString.HasValue())
            return query.Where(t => t.FName.Contains(SearchString) || t.LName.Contains(SearchString));
        return query;
    }
}
